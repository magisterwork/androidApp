<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_text"
    card_view:cardElevation="3dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.7dp"
        android:paddingBottom="@dimen/horizontal_margin"
        android:background="@android:color/white">

        <!-- Картинка поста -->
        <ImageView
            android:id="@+id/post_poster"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/event"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- Заголовок поста -->
        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/primary_text_light_nodisable"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="@dimen/vertical_margin"
            android:layout_below="@+id/post_poster"/>

        <!-- Описание события -->
        <TextView
            android:id="@+id/post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/primary_text_light"
            android:maxLines="5"
            android:ellipsize="end"
            android:paddingBottom="6dp"
            android:layout_below="@id/post_title"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"/>

        <TextView
            android:id="@+id/post_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="г.Вологда, ул. Городской вал"
            android:paddingBottom="6dp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/post_description"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />

        <TextView
            android:id="@+id/post_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="22 ноября 2017"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/post_poster"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin" />

    </RelativeLayout>

</android.support.v7.widget.CardView>