<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.eventsapp.MainActivity"
    tools:showIn="@layout/detailpost_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/horizontal_margin"
        android:background="@android:color/white">

        <!-- Заголовок поста -->
        <TextView
            android:id="@+id/detail_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/primary_text_light_nodisable"
            android:layout_marginTop="@dimen/margin_text"
            android:layout_marginLeft="@dimen/vertical_margin" />

        <!-- Картинка поста -->
        <ImageView
            android:id="@+id/detail_post_poster"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/event"
            android:scaleType="fitXY"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/detail_post_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- Описание события -->
        <TextView
            android:id="@+id/detail_post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/primary_text_light"
            android:paddingBottom="6dp"
            android:layout_below="@id/detail_post_poster"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"/>

        <TextView
            android:id="@+id/detail_post_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="г.Вологда, ул. Городской вал"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:paddingBottom="2dp"
            android:layout_below="@id/detail_post_description"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"/>

        <TextView
            android:id="@+id/detail_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="1ч"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:paddingBottom="2dp"
            android:layout_below="@id/detail_post_address"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
