<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="@dimen/big_margin"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/rating_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:sparkbutton_activeImage="@drawable/ic_thumb_down_active"
        app:sparkbutton_inActiveImage="@drawable/ic_thumb_down"
        app:sparkbutton_iconSize="50dp"
        app:sparkbutton_primaryColor="@color/colorPrimary"
        app:sparkbutton_secondaryColor="@color/colorAccent"
        android:layout_margin="@dimen/medium_margin"/>

    <TextView
        android:id="@+id/dialog_event_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_circular"
        android:padding="6dp"
        android:textSize="22sp"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="22" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/rating_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/medium_margin"
        app:sparkbutton_activeImage="@drawable/ic_thumb_up_active"
        app:sparkbutton_inActiveImage="@drawable/ic_thumb_up"
        app:sparkbutton_iconSize="50dp"
        app:sparkbutton_primaryColor="@color/colorPrimary"
        app:sparkbutton_secondaryColor="@color/colorAccent" />

</LinearLayout>